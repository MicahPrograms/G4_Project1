            <tr>
                <td> Return Date: <%= result[0].PkgEndDate %></td>
            </tr>
            <tr>
                <td> Description: <%= result[0].PkgDesc %></td>
            </tr>
            <tr>
                <td> Price: $ <%= result[0].PkgBasePrice %></td>
            </tr>
        </table>

